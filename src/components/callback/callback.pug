include ../form/form-group


script(type='text/html', data-modal='callback')
  #modal-callback.modal
    .modal__content.callback
      h2.modal__title Укажите ваш актуальный телефон
      p.modal__decription и мы свяжемся с вами #[br] в течении 15 минут
      form.callback__form
        +form-group({
          id: 'name',
          name: 'name',
          placeholder: 'Введите ваше имя',
          icon: 'user'
        })
        +form-group({
          id: 'phone',
          name: 'phone',
          placeholder: 'Введите ваш телефон',
          icon: 'phone'
        })
        button.button.button_red.button_block.callback__submit Оставить заявку
          +icon({ icon: 'mobile', className: 'button__icon' })
